vbell off
startup_message off
escape ^T^T
autodetach on
msgminwait 0

hardstatus alwayslastline "[%m/%d %a %C] %`%-w%{=b bw}%n %t%{-}%+w"

#key bind
bind -c REGION 2 split
bind -c REGION 1 only
bind -c REGION 0 remove
bind -c REGION o focus
bind -c REGION ^ resize 
bind x command -c REGION

defscrollback 10000
